    "version": "0.2.0",
    "configurations": [
        {
            "name": "1a. (stj.simple_button)",
            "type": "debugpy",
            "request": "launch",
            "module": "stj.sample_button",
            "cwd": "${workspaceFolder}/src/py",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "justMyCode": false,
            "serverReadyAction": {
              "pattern": "Uvicorn running on\\s+(https?://\\S+)",
              "uriFormat": "%s/",
              "action": "debugWithChrome",
              "killOnServerStop": true
            }
        },

        {
          "name": "debugpy: Current File",
          "type": "debugpy",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "justMyCode": true
      },

        {
          "name": "2a. PyTest (test_sample)",
          "type": "debugpy",
          "request": "launch",
          "stopOnEntry": false,
          "module": "pytest",
          "args": [
            "./tests/test_sample.py"
          ],
          "cwd": "${workspaceRoot}/src/py/reactpy",
          "env": {},
          "envFile": "${workspaceRoot}/.env",
          "console": "internalConsole",
          "internalConsoleOptions": "openOnSessionStart",
          "justMyCode": false
        },

